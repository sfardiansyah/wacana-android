<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BaseText" parent="TextAppearance.AppCompat" >
        <item name="android:fontFamily">@font/circular_std</item>
    </style>

    <style name="TextSecondary" parent="BaseText">
        <item name="android:textColor">@color/colorDisabled</item>
    </style>

    <style name="TextPrimary" parent="BaseText">
        <item name="android:textColor">@color/colorPrimary</item>

    </style>

    <style name="SectionTitle" parent="TextPrimary">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SectionSubtitle" parent="TextPrimary">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CardPrimaryTitle" parent="SectionSubtitle" />

    <style name="CardSubtitle" parent="TextSecondary">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="SplashScreen" parent="Theme.AppCompat.NoActionBar"/>

    <style name="ClickToActionButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily">@font/circular_std</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/button_cta</item>
    </style>

    <style name="Container">
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
    </style>

</resources>
